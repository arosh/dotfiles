[core]
  editor = vim
  excludesfile = ~/.gitignore
[merge]
  tool = vimdiff
  ff = false
[pull]
  # mergeをno-ffにするとpullでもマージコミットが作られてしまうのを回避する
  rebase = true
[color]
  ui = auto
[alias]
  br = branch
  st = status
  co = checkout
[credential]
  # パスワードを15分間キャッシュする
  # http://qiita.com/usamik26/items/c655abcaeee02ea59695
  helper = cache
[push]
  default = simple
[url "git@github.com:"]
  # GitHubには公開鍵認証で接続する (httpsではなくsshで接続する)
  # http://qiita.com/nysalor/items/f779898eb88c1ce7be12
  pushinsteadof = https://github.com/
[include]
  path = ~/.gitconfig.local
